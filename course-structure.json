{
  "course": {
    "title": "Interactive MLOps Course",
    "version": "1.0.0",
    "description": "Learn production ML principles by building and deploying a real model with Claude Code as your learning partner",
    "target_completion_hours": 12,
    "prerequisites": ["Python proficiency", "Basic ML concepts (sklearn, pandas)", "Command line familiarity"]
  },
  "core_project": {
    "name": "Sentiment Classifier",
    "description": "A production-ready text classification model for customer feedback analysis",
    "dataset": "Amazon product reviews (subset)",
    "progression": {
      "level_1": "Train locally, package in Docker",
      "level_2": "Add versioning, tracking, testing",
      "level_3": "Deploy as API to cloud",
      "level_4": "Add CI/CD, monitoring, drift detection"
    }
  },
  "levels": [
    {
      "id": 1,
      "title": "Foundations",
      "slug": "foundations",
      "description": "From notebook to production-ready code",
      "lessons": [
        {
          "id": "1-1",
          "title": "Welcome & Setup",
          "slug": "welcome-setup",
          "file": "lesson-modules/1-foundations/1-1-welcome-setup.md",
          "command": "start-1-1",
          "duration_minutes": 20,
          "objectives": [
            "Understand course structure and navigation",
            "Set up development environment",
            "Verify all prerequisites are installed"
          ],
          "hands_on": ["Environment verification script", "First Claude Code interaction"]
        },
        {
          "id": "1-2",
          "title": "MLOps Principles",
          "slug": "mlops-principles",
          "file": "lesson-modules/1-foundations/1-2-mlops-principles.md",
          "command": "start-1-2",
          "duration_minutes": 30,
          "objectives": [
            "Understand why 87% of ML projects fail in production",
            "Learn the 5 pillars of MLOps: Design, Data, Model, Deploy, Monitor",
            "Recognize technical debt patterns in ML systems"
          ],
          "hands_on": ["Analyze a 'bad' ML project structure", "Design review exercise"]
        },
        {
          "id": "1-3",
          "title": "Your First Model",
          "slug": "first-model",
          "file": "lesson-modules/1-foundations/1-3-first-model.md",
          "command": "start-1-3",
          "duration_minutes": 45,
          "objectives": [
            "Build a sentiment classifier from scratch",
            "Structure ML code for production (not notebooks)",
            "Implement proper train/validation/test splits"
          ],
          "hands_on": ["Build the sentiment classifier", "Refactor from notebook to modules"]
        },
        {
          "id": "1-4",
          "title": "Packaging for Production",
          "slug": "docker-basics",
          "file": "lesson-modules/1-foundations/1-4-docker-basics.md",
          "command": "start-1-4",
          "duration_minutes": 45,
          "objectives": [
            "Understand why containers matter for ML",
            "Write a Dockerfile for ML applications",
            "Handle model artifacts and dependencies correctly"
          ],
          "hands_on": ["Write Dockerfile", "Build and test container locally", "Debug common container issues"]
        }
      ]
    },
    {
      "id": 2,
      "title": "The ML Pipeline",
      "slug": "pipeline",
      "description": "Reproducibility, tracking, and quality",
      "lessons": [
        {
          "id": "2-1",
          "title": "Data Versioning",
          "slug": "data-versioning",
          "file": "lesson-modules/2-pipeline/2-1-data-versioning.md",
          "command": "start-2-1",
          "duration_minutes": 40,
          "objectives": [
            "Understand why git alone fails for ML data",
            "Set up DVC for data versioning",
            "Link data versions to code versions"
          ],
          "hands_on": ["Initialize DVC", "Version the training dataset", "Simulate data update workflow"]
        },
        {
          "id": "2-2",
          "title": "Experiment Tracking",
          "slug": "experiment-tracking",
          "file": "lesson-modules/2-pipeline/2-2-experiment-tracking.md",
          "command": "start-2-2",
          "duration_minutes": 45,
          "objectives": [
            "Track experiments with MLflow",
            "Log parameters, metrics, and artifacts",
            "Compare experiments and select best models"
          ],
          "hands_on": ["Set up MLflow tracking", "Log training runs", "Use MLflow UI to compare experiments"]
        },
        {
          "id": "2-3",
          "title": "Model Registry",
          "slug": "model-registry",
          "file": "lesson-modules/2-pipeline/2-3-model-registry.md",
          "command": "start-2-3",
          "duration_minutes": 35,
          "objectives": [
            "Understand model lifecycle stages",
            "Register models with versioning",
            "Implement promotion workflows (staging -> production)"
          ],
          "hands_on": ["Register model in MLflow", "Promote model through stages", "Load models by stage"]
        },
        {
          "id": "2-4",
          "title": "Testing ML Code",
          "slug": "testing-ml",
          "file": "lesson-modules/2-pipeline/2-4-testing-ml.md",
          "command": "start-2-4",
          "duration_minutes": 45,
          "objectives": [
            "Distinguish unit, integration, and ML-specific tests",
            "Test data pipelines and model predictions",
            "Implement behavioral testing for models"
          ],
          "hands_on": ["Write pytest tests for data pipeline", "Add model behavioral tests", "Set up pre-commit hooks"]
        }
      ]
    },
    {
      "id": 3,
      "title": "Deployment",
      "slug": "deployment",
      "description": "From local to production serving",
      "lessons": [
        {
          "id": "3-1",
          "title": "Model Serving Options",
          "slug": "serving-options",
          "file": "lesson-modules/3-deployment/3-1-serving-options.md",
          "command": "start-3-1",
          "duration_minutes": 30,
          "objectives": [
            "Compare batch vs real-time inference",
            "Understand latency vs throughput tradeoffs",
            "Choose serving strategy based on use case"
          ],
          "hands_on": ["Analyze requirements for serving strategy", "Decision matrix exercise"]
        },
        {
          "id": "3-2",
          "title": "Building an API",
          "slug": "fastapi-model",
          "file": "lesson-modules/3-deployment/3-2-fastapi-model.md",
          "command": "start-3-2",
          "duration_minutes": 50,
          "objectives": [
            "Wrap model in FastAPI endpoint",
            "Handle request validation and errors",
            "Implement health checks and metadata endpoints"
          ],
          "hands_on": ["Build prediction endpoint", "Add input validation", "Test with curl and Python client"]
        },
        {
          "id": "3-3",
          "title": "Containerization Deep Dive",
          "slug": "containers-advanced",
          "file": "lesson-modules/3-deployment/3-3-containers-advanced.md",
          "command": "start-3-3",
          "duration_minutes": 40,
          "objectives": [
            "Optimize Docker images for production",
            "Implement multi-stage builds",
            "Handle secrets and configuration properly"
          ],
          "hands_on": ["Optimize Dockerfile", "Reduce image size", "Add health checks"]
        },
        {
          "id": "3-4",
          "title": "Deploying to Cloud",
          "slug": "cloud-deployment",
          "file": "lesson-modules/3-deployment/3-4-cloud-deployment.md",
          "command": "start-3-4",
          "duration_minutes": 60,
          "objectives": [
            "Deploy container to cloud platform",
            "Configure networking and scaling",
            "Set up basic monitoring"
          ],
          "hands_on": ["Deploy to cloud (GCP Cloud Run)", "Configure auto-scaling", "Verify deployment"]
        }
      ]
    },
    {
      "id": 4,
      "title": "Production Operations",
      "slug": "production",
      "description": "Running ML systems reliably",
      "lessons": [
        {
          "id": "4-1",
          "title": "CI/CD for ML",
          "slug": "cicd-ml",
          "file": "lesson-modules/4-production/4-1-cicd-ml.md",
          "command": "start-4-1",
          "duration_minutes": 50,
          "objectives": [
            "Build GitHub Actions workflow for ML",
            "Automate testing, building, and deployment",
            "Implement model validation gates"
          ],
          "hands_on": ["Create GitHub Actions workflow", "Add model validation step", "Trigger automated deployment"]
        },
        {
          "id": "4-2",
          "title": "Monitoring & Observability",
          "slug": "monitoring",
          "file": "lesson-modules/4-production/4-2-monitoring.md",
          "command": "start-4-2",
          "duration_minutes": 45,
          "objectives": [
            "Distinguish system metrics from model metrics",
            "Implement logging and alerting",
            "Build prediction monitoring dashboard"
          ],
          "hands_on": ["Add structured logging", "Create monitoring dashboard", "Set up alerts"]
        },
        {
          "id": "4-3",
          "title": "Model Drift & Retraining",
          "slug": "drift-retraining",
          "file": "lesson-modules/4-production/4-3-drift-retraining.md",
          "command": "start-4-3",
          "duration_minutes": 45,
          "objectives": [
            "Understand data drift vs concept drift",
            "Implement drift detection",
            "Design retraining triggers and workflows"
          ],
          "hands_on": ["Add drift detection", "Simulate drift scenario", "Trigger retraining pipeline"]
        },
        {
          "id": "4-4",
          "title": "Putting It All Together",
          "slug": "capstone",
          "file": "lesson-modules/4-production/4-4-capstone.md",
          "command": "start-4-4",
          "duration_minutes": 60,
          "objectives": [
            "Review complete MLOps architecture",
            "Identify areas for improvement",
            "Plan next steps for continued learning"
          ],
          "hands_on": ["Architecture review", "Complete end-to-end exercise", "Self-assessment"]
        }
      ]
    }
  ],
  "agents": {
    "ml_engineer_reviewer": {
      "file": ".claude/agents/ml-engineer-reviewer.md",
      "description": "Reviews code from ML best practices perspective"
    },
    "sre_reviewer": {
      "file": ".claude/agents/sre-reviewer.md",
      "description": "Reviews deployments from reliability perspective"
    },
    "security_reviewer": {
      "file": ".claude/agents/security-reviewer.md",
      "description": "Reviews for security vulnerabilities"
    }
  }
}
